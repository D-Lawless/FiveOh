<form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post">

    <% @orderTotal = 0 %>
    <% @order.orderitems.each do |item| %>
    <% @orderTotal += item.price %>
    <% end %>

    
    <input type="hidden" name="cmd" value="_xclick">
    
    <input type="hidden" name="business" value="BusinessPaypalEmail@gmail.com">
    
    <input type="hidden" name="item_name" value="FiveOh Skate Store Order Number: <%= @order.id %>">
    
    <input type="hidden" name="currency_code" value="EUR">
    
    <input type="hidden" name="amount" value="<%= @orderTotal %>">
    
    <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynow_LG.gif" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">
    
    <input type="hidden" name="return" value="https://ceb630a316fd4cf2b9613c1d21a19ae6.vfs.cloud9.us-east-1.amazonaws.com/paid/<%= @order.id %>" >
    
</form>