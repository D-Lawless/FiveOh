<div class="w3-container">
    <h1 class="w3-center">Categories</h1>
<br>
    <% @categories.each do |category| %>
      <div class="w3-quarter w3-border w3-container w3-white w3-card w3-center">
            <p><%= category.title %></p>
            <%= link_to (image_tag category.image, :class => "w3-hover-opacity", :style => "width:100%"), category %>
            <p><%= category.description %></p>
            <p><a href="/category/<%=category.title%>" class="w3-button w3-black w3-round-large"><%=category.title%></a></p>

        </div>
    <% end %>
    
</div>