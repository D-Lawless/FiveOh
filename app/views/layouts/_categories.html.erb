<h1>Categories-TEST</h1>
<br>
    <% @categories.each do |category| %>
        <div class="producthols">
            <p><%= category.title %></p>
            <%= link_to (image_tag category.image, :class=>"productholsIm"), category %>
            <p><%= category.description %></p>
            <p><a href="/category/<%=category.title%>" class="button2"><%=category.title%></a></p>

        </div>
    <% end %>