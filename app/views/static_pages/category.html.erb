<p id="notice"><%= notice %></p>
<div id="ProductsContainer">
<h1>Products</h1>

<% if @products.length == 0  %>
<br />
<h2>There are currently no products in this category</h2>
<% end %>

    <% @products.each do |product| %>
      <div class="producthols">
        <h1><%= product.title %></h1>
        <%= link_to (image_tag product.img_url, :class=>"productholsIm"), product %>
        <div style="height:120px;">
          <p><%= truncate(product.description, :length => 80) %></p>
        </div>

       </p>
       <p><%= product.price %>
        <br>
        <%= product.category %>
        <br>
        <%= product.brand %>
        </p>
        <p>        
         
          <a href="/cart/<%= product.id %>" class="button">Add to Cart</a>  
          <%= link_to 'Show', product, :class =>"button", :role=>"button" %>
        

        <% if session[:login] == 1 %> 
        <%= link_to 'Edit', edit_product_path(product), :class =>"button", :role=>"button" %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"button",           :role=>"button" %>
        
        <% end %>
        </p>
     </div>
    <% end %>
  <br>
</div>

